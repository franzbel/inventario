<%= fields_for 'quantities[]', OutgoingAmount.new do |builder| %>
        <div class="row">
          <div class="col-md-12">
            <strong><%= product.description %></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= builder.label 'Cantidad' %>
              <%= builder.number_field :quantity, class:'form-control' %>
              <%= builder.hidden_field :product_id, :value => product.product_id %>
              <%= builder.hidden_field :expiration_date, :value => product.expiration_date %>
            </div>
          </div>
        </div>

<% end %>