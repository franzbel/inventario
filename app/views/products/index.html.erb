<style>
  .center-paginate{
      /*border: 1px solid blue;*/
      text-align: center;
  }
</style>
<h3>CATALOGO</h3>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>NUMERO DE PARTE</th>
      <th>DESCRIPCION</th>
      <th>UNIDAD</th>
      <th colspan="3">ACCIONES</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.part_number %></td>
          <td><%= product.description %></td>
          <td><%= product.unit %></td>
          <td><%= link_to 'Mostrar', product_path(product) %></td>
          <td><%= link_to 'Editar', edit_product_path(product) %></td>
          <td><%= link_to 'Eliminar', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="center-paginate">
    <%= will_paginate %>
  </div>
  <%= link_to 'Nuevo producto', new_product_path %>
