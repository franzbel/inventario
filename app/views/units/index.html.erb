  <h1>UNIDADES DISPONIBLES</h1>

  <table>
    <thead>
    <tr>
      <th><Unidad></Unidad></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @units.each do |unit| %>
        <tr>
          <td><%= unit.unit %></td>
